{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:styled-components-a11y/strict",
    "plugin:valtio/recommended"
  ],
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier",
    "styled-components-a11y",
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [".vite.config.ts", "dist", "dev-dist"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "@typescript-eslint/camelcase": "off",
    "linebreak-style": "off",
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "import/prefer-default-export": "off",
    "jsx-a11y/control-has-associated-label": "error",
    "styled-components-a11y/control-has-associated-label": "error",
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": "off",
    "react/prop-types": "off",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "no-plusplus": "off",
    // TODO: check vite implementation of this
    // "no-restricted-imports": [
    //   "error",
    //   {
    //     "name": "styled-components",
    //     "message": "Please use 'styled-components/macro' instead."
    //   }
    // ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "no-restricted-syntax": "off",
    "@typescript-eslint/no-this-alias": "off",
    "@typescript-eslint/no-namespace": "off",
    "valtio/state-snapshot-rule": "off" // TODO: check it
  }
}
